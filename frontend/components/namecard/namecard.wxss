.namecard {
  width: 130px;
  height: 80px;
  border-radius: 21px;
  box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
  display: flex;
  justify-content: space-evenly;
}
.namecard:active {
  box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.25) inset;
}
.avatar {
  width: 39px;
  height: 39px;
  border-radius: 50%;
  margin-top: 12px;
  margin-bottom: 3px;
}
.name {
  font-family: ABeeZee;
  font-size: 14px;
  font-style: normal;
  font-weight: 400;
  line-height: normal;
}
.left-side {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  vertical-align: center;
}
.right-side {
  width: 50%;
  display: flex;
  align-items: center;
}
.status-icon {
  width: 45px;
  height: 45px;
}
