.namecard-component {
  width: 161.8px;
  height: 100px;
  border-radius: 21px;
  position: absolute;
}
.namecard-placeholder {
  position: relative;
  border-radius: 21px;
  display: flex;
}
.namecard:active {
  box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.25) inset;
}
.avatar {
  width: 47px;
  height: 47px;
  border-radius: 50%;
  margin-top: 13px;
}
.name {
  font-family: ABeeZee;
  margin-top: 4px;
}
.left-side {
  padding-top: 3%;
  width: 56.6%;
  display: flex;
  flex-direction: column;
  align-items: center;
  vertical-align: center;
}
.right-side {
  width: 43.4%;
  display: flex;
  align-items: center;
}
.status-icon {
  width: 45px;
  height: 45px;
}
