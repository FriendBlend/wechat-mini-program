/* large namecard */
.container {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.popup-mask {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 99;
  backdrop-filter: blur(22.5px);
}
.large-namecard {
  position: absolute;
  top: 149rpx;
  left: 36rpx;
  right: 36rpx;
  bottom: 72rpx;
  z-index: 900;
}
.large-namecard-content {
  border-radius: 50rpx;
  height: auto;
  width: 100%;
  position: absolute;
  top: 74rpx;
  bottom: 0;
  box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
  z-index: 999;
}

/* tabs */
.tabs {
  position: absolute;
  right: 36rpx;
  width: 284rpx;
  display: flex;
  justify-content: space-between;
}
.tab {
  width: 86rpx;
  height: 126rpx;
  border-radius: 30rpx;
  background: white;
}
.tab-icon {
  margin: 12rpx 16rpx;
  width: 54rpx;
  height: 54rpx;
}
.tabs .active {
  background: #d9d9d9;
}

/* namecard */
.namecard {
  position: absolute;
  top: -90rpx;
  left: 326rpx;
  scale: 94%;
  z-index: 999;
}

/* buttons */
.button-more {
  position: absolute;
  top: 24rpx;
  left: 272rpx;
  width: 144rpx;
  height: 80rpx;
  border-radius: 15px;
  background: white;
}
.more-icon {
  float: right;
  margin: 12rpx 16rpx;
  width: 54rpx;
  height: 54rpx;
}

.greet-button {
  position: absolute;
  top: 24rpx;
  right: 36rpx;
  width: 210rpx;
  height: 80rpx;
  border-radius: 30rpx;
  background: white;
  display: flex;
  justify-content: center;
}
.greet-button .button-icon {
  margin: 12rpx 0;
  height: 54rpx;
  width: 54rpx;
}

.action-buttons {
  position: absolute;
  top: 24rpx;
  right: 36rpx;
  display: flex;
  width: 210rpx;
  justify-content: space-between;
}
.action-button {
  width: 98rpx;
  height: 80rpx;
  border-radius: 30rpx;
  background: white;
}
.action-buttons .button-icon {
  margin: 12rpx 22rpx;
  height: 54rpx;
  width: 54rpx;
}

/* name and tags */
.name-and-tags {
  position: absolute;
  bottom: 80rpx;
  left: 80rpx;
  width: 488rpx;
  display: flex;
  flex-direction: column;
}
.name {
  font-size: 64rpx;
  font-weight: 700;
  color: white;
}
.pet-name {
  color: white;
  font-size: 64rpx;
  font-weight: 700;
}
.pet-remark {
  color: white;
  font-weight: 400;
  font-size: 26rpx;
  margin-top: -10rpx;
}

/* photo swiper */
.swiper {
  position: absolute;
  left: 36rpx;
  right: 36rpx;
  bottom: 38rpx;
  top: 128rpx;
  width: auto;
  height: auto;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
}
.slide-image {
  width: 100%;
  height: 100%;
}
.wx-swiper-dots-horizontal {
  width: 100%;
  position: relative;
  top: 34rpx;
  background-color: coral;
}
.wx-swiper-dot {
  width: 30% !important;
  border-radius: 100px !important;
  background-color: #979797 !important;
  height: 3.156px !important;
}
.swiper .wx-swiper-dot-active {
  background-color: white !important;
}

/* close button */
.close-btn {
  position: absolute;
  top: -158rpx;
  left: -10rpx;
  width: 86rpx;
  height: 86rpx;
  z-index: 999;
}