.menu-container {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 99;
}
.menu-backdrop {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.30);
  backdrop-filter: blur(1.5px);
}
.menu-main-frame {
  position: relative;
  width: 258rpx;
  height: fit-content;
  padding: 32rpx;
  box-sizing: border-box;
  border-radius: 22px;
  background: var(--lightGrey);
}
.menu-triangle {
  position: absolute;
  left: 226rpx;
  top: 32rpx;
  width: 98rpx;
  height: 90rpx;
}
/* top section */
.top-section {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr 1fr;
  row-gap: 20rpx;
  column-gap: 16rpx;
  justify-items: center;
  margin-bottom: 20rpx;
}
.menu-button--sm {
  height: 80rpx;
  width: 80rpx;
  border-radius: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
}
.menu-button-icon {
  height: 54rpx;
  width: 54rpx;
}
.icon--home {
  height: 50rpx;
  width: 50rpx;
}
.icon--profile {
  height: 50rpx;
  width: 46rpx;
}

/* bottome section */
.bottom-section {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  gap: 16rpx;
  padding-top: 20rpx;
  border-top: 1px solid var(--darkGrey);
}
.menu-button--special {
  height: 80rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
  border-radius: 12px;
  box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
}
.special-button-text {
  color: white;
  font-size: 12px;
  font-weight: 800;
}
.special-button--yellow {
  background: linear-gradient(180deg, #FFC571 44.58%, #F9B84F 59.53%);
}
.special-button--red {
  background: linear-gradient(180deg, #E76C68 46.4%, #E8534C 59.45%);
}
.special-button--blue {
  background: linear-gradient(180deg, #70C3FF 24.92%, rgba(79, 167, 249, 0.96) 59.53%);
}
.special-button--green {
  background: linear-gradient(180deg, rgba(33, 245, 133, 0.90) 43.2%, #22D879 65.55%);
}
.icon--follow {
  position: relative;
  left: 4rpx;
}
