.panel {
  width: 618rpx;
  height: 392rpx;
  border-radius: 21px;
  background: var(--lightGrey);
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 30% auto;
  padding: 20rpx 0;
}
.top-part {
  width: 575rpx;
  height: 198rpx;
  border-radius: 15px;
  background: #FFF;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: auto;
}
.input-text {
  font-family: ABeeZee;
  font-size: 22px;
  margin-left: auto;
  margin-right: auto;
}
.input-field {
  width: 500rpx;
  height: 80rpx;
  margin: 0 auto;
  border-radius: 10px;
  background: rgba(237, 237, 237, 0.90);
  box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25) inset;
  padding-left: 18rpx;
  font-family: ABeeZee;
  font-size: 22px;
}
.input-field-placeholder {
  color: rgba(0, 0, 0, 0.36);
  font-family: ABeeZee;
  font-size: 22px;
}
.join-button {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: white;
  width: 200rpx;
  height: 120rpx;
  margin: 10rpx auto;
  padding-top: 20rpx;
  border-radius: 30rpx;
  box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
}
.join-image {
  width: 100rpx;
  height: 100rpx;
  margin: -10rpx auto;
}
.join-text {
  margin: 0 auto;
  margin-bottom: 10rpx;
  font-family: ABeeZee;
  font-size: 22px;
}