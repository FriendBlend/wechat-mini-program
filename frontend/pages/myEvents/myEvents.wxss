/* pages/myEvents/myEvents.wxss */
.container {
  padding: 20px;
}

.event-list {
  height: 500px; /* 设置滚动视图的高度 */
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
  margin-bottom: 5px;
}

.event-item {
  padding: 10px;
  border: 1px solid #ccc;
  margin-bottom: 10px;
}

.event-date {
  font-size: 14px;
  color: #007aff;
}

.event-name {
  font-size: 16px;
  font-weight: bold;
  margin-top: 5px;
}

.event-info {
  font-size: 14px;
  color: #555;
}
