<!--pages/myEvents/myEvents.wxml-->
<view class="container">
  <view class="tabs">
    <view class="{{activeTab === 0 ? 'tab active' : 'tab'}}" bindtap="switchTab" data-index="0">Future Events</view>
    <view class="{{activeTab === 1 ? 'tab active' : 'tab'}}" bindtap="switchTab" data-index="1">Past Events</view>
  </view>
  <scroll-view class="event-list" scroll-y="true" scroll-with-animation="true">
    <block wx:for="{{activeTab === 0 ? futureEvents : pastEvents}}" wx:key="index">
      <view class="event-item">
        <view class="event-date">{{item.date}}</view>
        <view class="event-name">{{item.name}}</view>
        <view class="event-info">{{item.info}}</view>
      </view>
    </block>
  </scroll-view>
</view>

