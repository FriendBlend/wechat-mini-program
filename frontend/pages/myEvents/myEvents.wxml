<!--pages/myEvents/myEvents.wxml-->
<view class="container">
  <scroll-view class="event-list" scroll-y="true" scroll-into-view="{{scrollIntoView}}">
    <!-- 过去的事件 -->
    <view class="section-title">过去的事件</view>
    <block wx:for="{{pastEvents}}" wx:key="index">
      <view class="event-item">
        <view class="event-date">{{item.date}}</view>
        <view class="event-name">{{item.name}}</view>
        <view class="event-info">{{item.info}}</view>
      </view>
    </block>

    <!-- 未来的事件 -->
    <view class="section-title">未来的事件</view>
    <block wx:for="{{futureEvents}}" wx:key="index">
      <view class="event-item">
        <view class="event-date">{{item.date}}</view>
        <view class="event-name">{{item.name}}</view>
        <view class="event-info">{{item.info}}</view>
      </view>
    </block>
  </scroll-view>
</view>

