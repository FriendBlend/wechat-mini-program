.container {
  padding: 0;
}

.top-container {
  width: 600rpx;
  padding: 34rpx;
  height: fit-content;
  background: rgba(217, 217, 217, 0.50);
  border-radius: 42rpx;
}
.top-container--namecard-row {
  display: flex;
  align-items: center;
  height: 290rpx;
}
.top-container--namecard-placeholder {
  width: 518rpx;
}
.top-container--namecard {
  transform: translateX(25%) scale(150%);
}
.option-buttons {
  float: right;
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: space-between;
}
.option-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12px;
  background: var(--lightGrey);
}
.option-button image {
  width: 54rpx;
  height: 54rpx;
  margin: 12rpx;
}
.top-container swiper {
  margin-top: 32rpx;
  background: var(--lightGrey);
  height: 140rpx;
  border-radius: 42rpx;
  box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
}

.bottom-container {
  width: 600rpx;
  margin-top: 30rpx;
  padding: 34rpx;
  height: fit-content;
  background: var(--lightGrey);
  border-radius: 42rpx;
}
.bottom-container .tabs {
  display: flex;
  justify-content: space-between;
  border-radius: 20px;
  overflow: hidden;
}
.bottom-container .tab {
  border-radius: 5px;
  background: white;
  padding: 14rpx;
  width: 26%;
}
.bottom-container .active {
  background: var(--darkGrey);
  color: white;
}
.tab-number {
  text-align: center;
  font-size: 42rpx;
}
.tab-text {
  margin-top: -6rpx;
  text-align: center;
  font-size: 28rpx;
}
.photos-section {
  display: grid;
  width: 100%;
  grid-template-columns: 1fr 1fr;
  grid-auto-rows: 408rpx;
  margin-top: 34rpx;
}
.photos-section image {
  margin: auto;
  width: 280rpx;
  height: 390rpx;
  border-radius: 30rpx;
  box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
}
.locked-photo-slot {
  background: var(--darkGrey);
  margin: auto;
  width: 280rpx;
  height: 390rpx;
  border-radius: 30rpx;
  box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
}
